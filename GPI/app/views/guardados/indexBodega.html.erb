<div class="container" style="margin-top: 100px">
	<%= @gg.each do |pedido|%>


	<ul class="list-inline bg-light">
		<li class=" border-list-inline-item bg-primary"> producto: <%=pedido.cosa%> </li>
		<li class="  list-inline-item bg-light"> cantidad: <%=pedido.cantidad%></li>
		<li class="  list-inline-item bg-light"> detalle: <%=pedido.detalles%></li>
		
<%- if (pedido.detalles != "enviado") %> 
		<li class="list-inline-item bg-light"> <%= link_to 'Enviar a trabajador', action: "edit", :id => pedido.id %></li>
	<%else%>
	<li class="list-inline-item bg-light"> Enviado a : <%=pedido.recibido%></li>

	<%end%>
		<li class="  list-inline-item bg-light"><%= link_to 'eliminar', action: "destroy", :id => pedido.id %></li><br>

	</ul>

<%end%>

</div>