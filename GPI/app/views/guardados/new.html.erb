<div class = "jumbotron bg-secondary" style="margin-left: 100px">
<%- if 	@pedido.errors.any? %>
<div class="alert alert-danger">
	<h4 class="alert-heading">Oh Noooooooo! </h4>
	<p>Recuerda ingresar todos los datos </p>
</div>
<%end%>

<h1><strong>Datos de producto agregado a bodega</strong></h1>

<%= form_for :guardado, url: {action: "create"} do |f| %>

<h3><%= f.label :producto %><br></h3>
<%= f.text_field :cosa, class: 'form-control' %>
<h3><%= f.label :cantidad %><br></h3>
<%= f.text_field :cantidad, class: 'form-control' %>
<h3><%= f.label :detalles %><br></h3>
<%= f.text_field :detalles, class: 'form-control' %>
<br>
<%= f.submit 'Agregar a bodega', :class => 'btn btn-primary'%>	
<% end %>

</div>